# Container user/group ownership
PUID=1000
PGID=1000
UMASK=002

# App runtime
TZ=UTC
APP_PORT=8000

# Storage configuration
STOCKWORKS_DATA_DIR=/data
STOCKWORKS_DB_FILENAME=app.db

# Optional external database (leave blank for SQLite)
DATABASE_URL=

# Admin authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Secret used for session signing (change in production)
SECRET_KEY=replace-me

# OrderWorks integration (optional HTTP fallback)
# Leave these blank if StockWorks already connects directly to the MakerWorks Postgres database.
# Fill them in only when StockWorks must call the OrderWorks API over HTTP.
ORDERWORKS_BASE_URL=
ORDERWORKS_ADMIN_USERNAME=
ORDERWORKS_ADMIN_PASSWORD=
