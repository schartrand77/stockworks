# Container user/group ownership
PUID=1000
PGID=1000
UMASK=002

# App runtime
TZ=UTC
APP_PORT=8000

# Storage configuration
STOCKWORKS_DATA_DIR=/data
STOCKWORKS_DB_FILENAME=app.db

# Optional external database (leave blank for SQLite)
DATABASE_URL=

# Admin authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Secret used for session signing (change in production)
SECRET_KEY=replace-me

# OrderWorks integration (optional)
ORDERWORKS_BASE_URL=http://localhost:3000
ORDERWORKS_ADMIN_USERNAME=admin@example.com
ORDERWORKS_ADMIN_PASSWORD=change-me
